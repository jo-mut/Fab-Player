<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="toolbarColored" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tablayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="tabTextAppearance">@style/tablayoutTextAppearance</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="profileTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="tabTextAppearance">@style/tablayoutTextAppearance</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="nameToolbarTextSize" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="toolbarTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MenuApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <declare-styleable name="ExpandableTextView">
        <attr name="trimLength" format="integer" />
    </declare-styleable>

</resources>
